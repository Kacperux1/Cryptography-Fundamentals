<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: pink;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.cryptography.view.MainController">

   <children>
      <VBox alignment="CENTER" spacing="40">
         <Text text="Podstawy Kryptografii">
            <font><Font size="24.0" /></font>
         </Text>

         <Button fx:id="symEncode" onAction="#enterCipherWindow" text="Szyfrowanie symetryczne (AES)" />
         <Button fx:id="asymEncode" mnemonicParsing="false" onAction="#enterElGamalWindow" text="Podpis cyfrowy (ElGamal)" />
      </VBox>
   </children>
</StackPane>
